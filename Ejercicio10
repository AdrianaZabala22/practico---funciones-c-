#include <iostream>
#include <string>
using namespace std;

string aRomano(int n) {
    string res = "";
    string romanos[]  = {"M","CM","D","CD","C","XC","L","XL","X","IX","V","IV","I"};
    int valores[] = {1000,900,500,400,100,90,50,40,10,9,5,4,1};

    for (int i = 0; i < 13; i++) {
        while (n >= valores[i]) {
            n -= valores[i];
            res += romanos[i];
        }
    }
    return res;
}

int main() {
    int n;
    cout << "Ingrese número (1–3999): ";
    cin >> n;
    cout << "En números romanos: " << aRomano(n) << endl;
    return 0;
}
