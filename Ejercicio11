#include <iostream>
#include <cmath>
#include <string>
using namespace std;

string unidades(int n) {
    string u[] = {"", "uno", "dos", "tres", "cuatro", "cinco", "seis", "siete", "ocho", "nueve"};
    return u[n];
}

string decenas(int n) {
    string d[] = {"", "diez", "veinte", "treinta", "cuarenta", "cincuenta", "sesenta",
                  "setenta", "ochenta", "noventa"};
    if (n < 10) return unidades(n);
    int t = n / 10;
    int r = n % 10;
    if (r == 0) return d[t];
    return d[t] + " y " + unidades(r);
}

string numeroLiteral(double num) {
    int entero = (int)num;
    int centavos = round((num - entero) * 100);
    return decenas(entero) + " " + to_string(centavos) + "/100 bolivianos";
}

int main() {
    double n;
    cout << "Ingrese monto (hasta 99.99): ";
    cin >> n;
    cout << numeroLiteral(n) << endl;
    return 0;
}
