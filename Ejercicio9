#include <iostream>
#include <string>
using namespace std;

int binarioADecimal(string bin) {
    int dec = 0;
    for (int i = 0; i < bin.size(); i++) {
        dec = dec * 2 + (bin[i] - '0');
    }
    return dec;
}

int main() {
    string bin;
    cout << "Ingrese nÃºmero binario: ";
    cin >> bin;
    cout << "Equivalente decimal: " << binarioADecimal(bin) << endl;
    return 0;
}
