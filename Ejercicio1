/*Construir una función POTEN(x, y), para calcular la potencia 
x y de dos números reales cualesquiera*/

#include <iostream>
#include <math.h>
using namespace std;

float potencia(float, int);

int main(){
   float x, r;
   int y;
   
   cout<<"Ingrese el numero de la base: "; cin>>x;
   cout<<"Ingrese el exponente: "; cin>>y;
   
   r = potencia(x,y);
   cout<<"El resultado de "<<x<<"^"<<y<<" es: "<<r<<endl;

    return 0;
}

float potencia(float base, int exponente){
    float resultado;
    resultado = pow(base, exponente);
    
    return resultado;
}


#include <iostream>
using namespace std;

double POTEN(double x, int y) {
    double resultado = 1.0;

    if (y > 0) {
        for (int i = 1; i <= y; i++) {
            resultado *= x;
        }
    } else if (y < 0) {
        for (int i = 1; i <= -y; i++) {
            resultado *= x;
        }
        resultado = 1.0 / resultado;
    } 
    return resultado;
}

int main() {
    double base;
    int exponente;

    cout << "Ingrese la base: ";
    cin >> base;

    cout << "Ingrese el exponente (entero, puede ser negativo): ";
    cin >> exponente;

    double potencia = POTEN(base, exponente);

    cout << base << " elevado a " << exponente << " es: " << potencia << endl;

    return 0;
}
